generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id            String      @id @default(uuid())
  name          String
  address       String
  neighborhood  String?
  zipCode       String? @map("zip_code")
  phone         String?
  salary        Decimal @db.Decimal(10, 2)
  contractDate  DateTime @map("contract_date")
  role          String

  @@map("employees")
}